@model Customer

<form class="form" asp-controller="Customer" asp-action="Edit" method="post" novalidate>
    <p>
        <label class="form-label">Nome Completo</label>
        <input asp-for="Name" class="form-control" required placeholder="Nome Completo" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </p>
    <p>
        <label class="form-label">Telefone</label>
        <input asp-for="Phone" class="form-control tel-mask" required placeholder="Telefone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </p>
    <p>
        <label class="form-label">CPF</label>
        <input asp-for="CPF" class="form-control cpf-mask" required placeholder="CPF" value="@Model.CPF"/>
        <span class="text-danger" asp-validation-for="CPF"></span>
        @Html.ValidationMessage("CustomerIsRegistered", new { @class = "text-danger" })
    </p>
    <p>
        <label class="form-label">Data de Cadastro: </label>
        <input type="text" class="form-control" value="@Model.CreatedAt.ToShortDateString()" disabled />
    </p>
    <p>
        <label class="form-label">Data da Ultima Atualização: </label>
        <input type="text" class="form-control" value="@Model.UpdatedAt.ToShortDateString()" disabled />
    </p>
    <p>
        <button type="submit" class="btn btn-sm btn-primary">
            <i class="bi bi-floppy"></i> Salvar
        </button>
    </p>
</form>
